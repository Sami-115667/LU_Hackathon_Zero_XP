<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="10dp"
            android:textAllCaps="true"
            android:layout_marginLeft="15dp"
            android:textSize="12dp"
            android:textStyle="bold"

            android:textColor="@color/blue"
            android:text="Enter your Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:padding="10dp"
            android:gravity="top"
            android:id="@+id/ed_name"
            android:textColorHint="@color/hint_colour"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="5dp"
            android:inputType="textMultiLine"
            android:minLines="10"
            android:paddingLeft="5dp" />


        <TextView
            android:textAllCaps="true"
            android:layout_marginLeft="15dp"
            android:textSize="12dp"
            android:textStyle="bold"

            android:textColor="@color/blue"
            android:text="Enter your Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText

            android:padding="10dp"
            android:gravity="top"
            android:id="@+id/ed_email"
            android:textColorHint="@color/hint_colour"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="5dp"
            android:inputType="textEmailAddress"
            android:minLines="10"
            android:paddingLeft="5dp" />
        <TextView
            android:textAllCaps="true"
            android:layout_marginLeft="15dp"
            android:textSize="12dp"
            android:textStyle="bold"

            android:textColor="@color/blue"
            android:text="Enter your Mobile Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText

            android:padding="10dp"
            android:gravity="top"
            android:id="@+id/ed_mobile"
            android:textColorHint="@color/hint_colour"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="5dp"
            android:inputType="textEmailAddress"
            android:minLines="10"
            android:paddingLeft="5dp" /><TextView
        android:textAllCaps="true"
        android:layout_marginLeft="15dp"
        android:textSize="12dp"
        android:textStyle="bold"

        android:textColor="@color/blue"
        android:text="Enter your University"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        <EditText

            android:padding="10dp"
            android:gravity="top"
            android:id="@+id/ed_university"
            android:textColorHint="@color/hint_colour"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="5dp"
            android:inputType="textEmailAddress"
            android:minLines="10"
            android:paddingLeft="5dp" /><TextView
        android:textAllCaps="true"
        android:layout_marginLeft="15dp"
        android:textSize="12dp"
        android:textStyle="bold"

        android:textColor="@color/blue"
        android:text="Enter your Department"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        <EditText

            android:padding="10dp"
            android:gravity="top"
            android:id="@+id/ed_dept"
            android:textColorHint="@color/hint_colour"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="5dp"
            android:inputType="textEmailAddress"
            android:minLines="10"
            android:paddingLeft="5dp" />





        <androidx.appcompat.widget.AppCompatButton
            android:padding="10dp"
            android:id="@+id/ap_update"
            android:foreground="@drawable/uni_background"
            android:clickable="true"
            android:backgroundTint="@color/blue"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:text="Update Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>