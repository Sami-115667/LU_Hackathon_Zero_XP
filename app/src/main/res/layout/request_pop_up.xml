<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="10dp"
            android:textAllCaps="true"
            android:layout_marginLeft="15dp"
            android:textSize="12dp"
            android:textStyle="bold"

            android:textColor="@color/blue"
            android:text="Enter your Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:padding="10dp"
            android:gravity="top"
            android:hint="Enter your name"
            android:id="@+id/ed_name"
            android:textColorHint="@color/hint_colour"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="5dp"
            android:inputType="textMultiLine"
            android:minLines="10"
            android:paddingLeft="5dp" />


        <TextView
            android:textAllCaps="true"
            android:layout_marginLeft="15dp"
            android:textSize="12dp"
            android:textStyle="bold"

            android:textColor="@color/blue"
            android:text="Enter your Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText

            android:padding="10dp"
            android:gravity="top"
            android:hint="Enter your email"
            android:id="@+id/ed_email"
            android:textColorHint="@color/hint_colour"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="5dp"
            android:inputType="textEmailAddress"
            android:minLines="10"
            android:paddingLeft="5dp" />




        <TextView
            android:layout_marginLeft="15dp"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:text="Enter your phone Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:padding="10dp"
            android:gravity="top"
            android:hint="Write your number"
            android:id="@+id/ed_phone"
            android:textColorHint="@color/hint_colour"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="5dp"
            android:lines="10"
            android:inputType="number"
            android:paddingLeft="5dp" />
        <TextView
            android:layout_marginLeft="15dp"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:text="Problem Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:padding="10dp"
            android:gravity="top"
            android:hint="Write description"
            android:id="@+id/ed_desc"
            android:textColorHint="@color/hint_colour"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/edit_text_background"
            android:drawablePadding="5dp"
            android:minLines="20"
            android:inputType="textMultiLine"
            android:paddingLeft="5dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:padding="10dp"
            android:id="@+id/ap_request_consaltancy_id"
            android:foreground="@drawable/uni_background"
            android:clickable="true"
            android:backgroundTint="@color/blue"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:text="Request For Consaltancy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>