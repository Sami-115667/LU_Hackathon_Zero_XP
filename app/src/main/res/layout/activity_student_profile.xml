<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/back"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_margin="25dp"
                app:cardCornerRadius="15dp"

                android:layout_width="match_parent"
                android:backgroundTint="@color/allert_back_upper"

                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView

                    android:layout_margin="15dp"
                    android:src="@drawable/image_du"
                    android:layout_gravity="center"

                    android:id="@+id/studentPic"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>


            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/userProfileUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:drawableLeft="@drawable/baseline_edit_24"
                ></Button>
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/studentName"
                android:layout_marginLeft="4dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:text="Md Rakibul Islam"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">




                <TextView
                    android:drawableLeft="@drawable/email_teacherinfo"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/studentEmail"
                    android:layout_marginLeft="4dp"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:text="sami@gmail.com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:drawableLeft="@drawable/call_teacherinfo"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/studentPhone"
                    android:layout_marginLeft="4dp"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:text="01712825655"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:drawableLeft="@drawable/uni"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/studentUni"
                    android:layout_marginLeft="4dp"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:text="University of Dhaka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:drawableLeft="@drawable/baseline_subject_24"
                    android:drawablePadding="10dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/studentDept"
                    android:layout_marginLeft="4dp"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:text="Department of Computer Science And Engineering"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>





            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>